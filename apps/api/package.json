{
  "name": "@finapsis/api",
  "version": "1.0.0",
  "description": "Finapsis Backend API",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev:clear-db": "CLEAR_DB_ON_START=true bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "lint": "echo 'Linting API...' && exit 0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/providers/supabase/migrate.ts",
    "db:drop": "drizzle-kit drop",
    "db:pull": "drizzle-kit introspect",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.0",
    "ai": "^5.0.0",
    "bullmq": "^5.56.9",
    "hono": "^4.8.9",
    "postgres": "^3.4.4",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "nanoid": "^5.0.7"
    "oci-aidocument": "^2.114.1",
    "oci-aivision": "^2.114.1",
    "oci-common": "^2.114.1",
    "oci-objectstorage": "^2.114.1",
    "oci-streaming": "^2.114.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.22.7",
    "pg": "^8.12.0",
    "dotenv": "^16.4.5",
    "tsx": "^4.15.7"
    "@types/node-fetch": "^2.6.13",
    "typescript": "^5.3.3"
  }
}
